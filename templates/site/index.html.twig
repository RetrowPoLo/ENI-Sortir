{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">ENI-Sortir</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item mx-3">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}"> Accueil </a>
                    </li>
                    {% if not app.user %}
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="{{ path('app_login') }}"> Connexion </a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="{{ path('app_logout') }}"> Mon profil </a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="{{ path('app_logout') }}"> Déconnexion </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <h1 class="text-center pt-5">Gérer les sites</h1>
    <h2 class="pt-3">Filtrer les sites</h2>
    {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
            <div class="col" id="some-custom-id">
                {{ form_row(form.save) }}
            </div>
        </div>
    {{ form_end(form) }}
    <div style="height: 200px;width: 500px; overflow:auto">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Ville</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            <h1>{{ contain }}</h1>
                {% for ville in villes %}
                    {% if contain == '' or contain|lower in ville.name|lower %}
                        <tr>
                            <td>
                                {{ ville.name }}
                            </td>
                            <td>
                                <a href="">modifier</a>-<a href="{{ path('app_delete_site', {'id': ville.id}) }}">supprimer</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                <tr>
                    {{ form_start(formVille) }}
                        <td>{{ form_row(formVille.name) }}</td>
                        <td>{{ form_row(formVille.save) }}</td>
                    {{ form_end(formVille) }}
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
