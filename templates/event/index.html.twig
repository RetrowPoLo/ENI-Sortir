{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}



{% block body %}
    <div class="container mt-5">
        <h3>Filtrer les sorties</h3>
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_start(formFilter) }}
            <div class="filter-home border-black border-2 border d-flex row align-items-center p-3">
                <div class="col-6">
                    {{ form_row(formFilter.locationSiteEvent) }}
                    {{ form_row(formFilter.name) }}
                </div>
                <div class="col-6">
                    <div class="d-flex">
                        {{ form_row(formFilter.startDateTime) }}
                        {{ form_row(formFilter.endDateTime) }}
                    </div>
                    {{ form_row(formFilter.state) }}
                </div>
            </div>
            <div class="d-flex justify-content-between pt-3">
                {{ form_row(formFilter.save) }}
                <h1>Liste des sorties</h1>
                <div class="text-center">
                    <a class="btn-outline-primary btn" href="{{ app.request.getBaseURL() }}/create/event">Ajouter une sortie</a>
                </div>
            </div>

            {{ form_end(formFilter) }}
        {% else %}
            {{ form_start(formFilter) }}
            <div class="filter-home border-black border-2 border d-flex row align-items-center p-3">
                <div class="col-5">
                    {{ form_row(formFilter.locationSiteEvent) }}
                    {{ form_row(formFilter.name) }}
                </div>
                <div class="col-3">
                    {{ form_row(formFilter.startDateTime) }}
                    {{ form_row(formFilter.endDateTime) }}
                </div>
                <div class="col-4">
                    {{ form_row(formFilter.userIsOrganizer) }}
                    {{ form_row(formFilter.userIsRegistered) }}
                    {{ form_row(formFilter.userIsNotRegistered) }}
                    {{ form_row(formFilter.stateIsPassed) }}
                </div>
            </div>
            <div class="d-flex justify-content-between pt-3">
                {{ form_row(formFilter.save) }}
                <h1>Liste des sorties</h1>
                <div class="text-center">
                    <a class="btn-outline-primary btn" href="{{ app.request.getBaseURL() }}/create/event">Ajouter une sortie</a>
                </div>
            </div>
            {{ form_end(formFilter) }}
        {% endif %}

        <div class="text-center">
            <button class="btn-outline-primary btn" id="changeDisplayType" >Changer type de vue</button>
        </div>
        <div class="mt-5">
            {% if events|length > 0 %}
                <div id="tableViewType">
                    {% include '/event/tableView.html.twig' with {'events': events} %}
                </div>
                <div id="cardViewType">
                    {% include '/event/cardView.html.twig' with {'events': events} %}
                </div>
            {% else %}
                <div>
                    <h4 class="text-danger">Aucune sortie trouv√©e</h4>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}

{% block javascripts_end %}
    <script src="{{ asset('./build/js/events.js') }}"></script>
    {#    {{ encore_entry_link_tags('app') }}#}
{% endblock %}
