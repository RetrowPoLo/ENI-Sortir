{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.username }}{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container"  style="max-width: 25%;">
        <h1>Profil de {{ app.user.username }}</h1>
        <div class="row">
{#                <img src="{{ app.user.avatar }}" alt="Avatar de {{ app.user.username }}" class="img-fluid">#}
            <div class="col-md-8">
                <ul>
                    <li><strong>Pseudo :</strong> {{ user.username }}</li>
                    <li><strong>Nom :</strong> {{ user.name }}</li>
                    <li><strong>Prénom :</strong> {{ user.firstName }}</li>
                    <li><strong>Email :</strong> {{ user.email }}</li>
                    <li><strong>Téléphone :</strong> {{ user.phone }}</li>
                    <li><strong>Ville de rattachement :</strong> {{ user.SitesNoSite }}</li>
{#                    <li><strong>Ma photo :</strong> {{ app.user.photo }}</li>#}
                </ul>
            </div>
        </div>
        {% if app.user and is_granted('ROLE_ADMIN')%}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
        {% elseif app.user == user %}
        <a href="{{ path('app_profile_edit', {'userid': app.user.id}) }}" class="btn btn-primary">Modifier</a>
        {% endif %}
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
    </div>

{% endblock %}
