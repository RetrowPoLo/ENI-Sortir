{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container-fluid w-25 mt-2">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_profile_edit', {'userid': app.user.id}) }}" class="btn btn-secondary">Retour</a>
        {{ form_end(form) }}

    </div>

{% endblock %}