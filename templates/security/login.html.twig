<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Connexion</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('./build/vendors-node_modules_bootstrap_dist_js_bootstrap_bundle_min_js-node_modules_bootstrap_dist_cs-f20b8b.css') }}">
            <link rel="stylesheet" href="{{ asset('./build/app.css') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('./build/vendors-node_modules_bootstrap_dist_js_bootstrap_bundle_min_js-node_modules_bootstrap_dist_cs-f20b8b.js') }}"></script>
            <script src="{{ asset('./build/app.js') }}"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid w-75 mt-5 pt-5">
            <div class="d-flex align-items-center py-4">
                <main class="form-signin w-100 m-auto">
                    <form method="post" class="d-flex justify-content-center">
                        <div class="border-black border bg-light border-3 p-5">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <h1 class="h3 mb-3 justify-content-center text-center fw-normal">Authentification</h1>

                            <div class="d-flex justify-content-between mb-3">
                                <label for="username" class="required">Email, nom d'utilisateur</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control border border-2 border-black" autocomplete="email" placeholder="name@example.com" required autofocus>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <label for="password" class="required">Mot de passe</label>
                                <input type="password" name="_password" id="password" class="form-control border border-2 border-black" autocomplete="current-password" placeholder="Mot de passe" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="d-flex align-items-center justify-content-evenly">
                                <button class="btn border border-2 border-black d-flex justify-content-center h-25 w-25 py-2" type="submit">Connexion</button>

                                <div class="form-check text-start my-3">
                                    <input class="form-check-input" type="checkbox" name="_remember_me" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">Se souvenir de moi</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </main>
            </div>
        </div>
    </body>
</html>
